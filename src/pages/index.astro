// --- Server Side (Runs on Cloudflare) ---

// DATA SOURCE: CoinGecko Public API
// We use tokens that track physical metals to get 24/7 pricing and historical data.
// PAXG = Paxos Gold (1 oz Gold)
// KAG = Kinesis Silver (1 oz Silver)

const GOLD_URL = "https://api.coingecko.com/api/v3/coins/pax-gold/market_chart?vs_currency=usd&days=30";
const SILVER_URL = "https://api.coingecko.com/api/v3/coins/kinesis-silver/market_chart?vs_currency=usd&days=30";

let goldPrice = 0, silverPrice = 0, dateOfData = "";
let goldPoints = "", silverPoints = "";
let chartAvailable = false;

// Helper: Fetch Clean API Data
async function getMetalData(url) {
  try {
    const res = await fetch(url);
    if (!res.ok) throw new Error("API Limit or Error");
    const json = await res.json();
    
    // CoinGecko returns "prices" as an array of [timestamp, price]
    const prices = json.prices.map(p => p[1]);
    
    // 1. Current Price is the last item in the array
    const currentPrice = prices[prices.length - 1];
    
    // 2. Generate Chart Points
    const points = makeSparkline(prices);
    
    return { price: currentPrice, points, success: true };
  } catch (e) {
    return { success: false };
  }
}

// Helper: Create SVG Polygon
function makeSparkline(data) {
  if (!data || data.length < 2) return "";
  // Downsample to ~100 points to keep SVG light
  const step = Math.ceil(data.length / 100);
  const valid = data.filter((_, i) => i % step === 0);
  
  const min = Math.min(...valid);
  const max = Math.max(...valid);
  
  return valid.map((p, i) => {
    const x = (i / (valid.length - 1)) * 100;
    const y = 100 - ((p - min) / (max - min)) * 100;
    return `${x},${y}`;
  }).join(" ");
}

// --- MAIN EXECUTION ---
const [gData, sData] = await Promise.all([
  getMetalData(GOLD_URL),
  getMetalData(SILVER_URL)
]);

if (gData.success && sData.success) {
  goldPrice = gData.price;
  silverPrice = sData.price;
  goldPoints = gData.points;
  silverPoints = sData.points;
  chartAvailable = true;
  dateOfData = "Live (24/7 Market)";
} else {
  // Fallback if CoinGecko rate limits us
  goldPrice = 2500; silverPrice = 30;
  dateOfData = "Offline Estimate";
}

const historicalData = {
  2010: { gold: 1224, silver: 20.19 },
  2011: { gold: 1571, silver: 35.12 },
  2012: { gold: 1668, silver: 31.15 },
  2013: { gold: 1411, silver: 23.79 },
  2014: { gold: 1266, silver: 19.08 },
  2015: { gold: 1160, silver: 15.68 },
  2016: { gold: 1250, silver: 17.14 },
  2017: { gold: 1257, silver: 17.04 },
  2018: { gold: 1268, silver: 15.71 },
  2019: { gold: 1392, silver: 16.21 },
  2020: { gold: 1769, silver: 20.55 },
  2021: { gold: 1798, silver: 25.14 },
  2022: { gold: 1801, silver: 21.76 },
  2023: { gold: 1940, silver: 23.35 },
  2024: { gold: 2350, silver: 28.50 },
  2025: { gold: 2650, silver: 32.00 },
  2026: { gold: goldPrice, silver: silverPrice }
};
